{
  "name": "llmud",
  "version": "1.0.0",
  "description": "use LLM to generate MUD content",
  "type": "module",
  "main": "./dist/create.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --declaration --outDir dist/",
    "create": "tsx -r dotenv/config src/create.ts",
    "play": "tsx -r dotenv/config src/play.ts",
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "list-models": "tsx -r dotenv/config src/list-models.ts "
  },
  "keywords": [
    "node",
    "typescript",
    "llm",
    "agent",
    "MUD",
    "creative",
    "writing"
  ],
  "author": "mike@eyeree.me",
  "license": "MIT",
  "dependencies": {
    "@types/diff": "^5.0.3",
    "axios": "^1.4.0",
    "diff": "^5.1.0",
    "dotenv": "^16.0.3",
    "openai": "^3.2.1",
    "smartwrap": "^2.0.2",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.21.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/js-yaml": "^4",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  }
}
